@model Navento.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h2></h2>
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Navento Commerce</h1>
        <p class="lead text-muted mb-0">@Html.DisplayFor(model => model.Nome)</p>
    </div>
</section>
<div class="container">
    <div class="row">
        <!-- Image -->
        <div class="col-12 col-lg-6">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <a href="" data-toggle="modal" data-target="#productModal">
                        <img class="img-fluid" data-src="holder.js/100px525?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap" />
                    </a>
                </div>
            </div>
        </div>

        <!-- Add to cart -->
        
        <div class="col-12 col-lg-6 add_to_cart_block">
            <form action="/Pedidoes/comprar" method="POST">
                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <p class="price">@Html.DisplayFor(model => model.PrecoUnitario)</p>
                        <input type="hidden" id="Id" name="Id" value="@Html.DisplayFor(model => model.Id)">
                        <input type="hidden" id="Nome" name="Nome" value="@Html.DisplayFor(model => model.Nome)">
                        <input type="hidden" id="PrecoUnitario" name="PrecoUnitario" value="@Html.DisplayFor(model => model.PrecoUnitario)">
                            <div class="form-group">
                            <button type="submit" value="Comprar" class="btn btn-success btn-lg btn-block text-uppercase">
                                <i class="fa fa-shopping-cart"></i> Add To Cart
                            </button>
                        <div class="product_rassurance">
                            <ul class="list-inline">
                                <li class="list-inline-item"><i class="fa fa-truck fa-2x"></i><br/>Fast delivery</li>
                                <li class="list-inline-item"><i class="fa fa-credit-card fa-2x"></i><br/>Secure payment</li>
                                <li class="list-inline-item"><i class="fa fa-phone fa-2x"></i><br/>+33 1 22 54 65 60</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <img class="img-fluid" src="https://dummyimage.com/1200x1200/55595c/fff" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
